<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners
                android:radius="5dip" />
            <gradient
                android:startColor="#ffff"
                android:centerColor="#ffff"
                android:centerY="0.5"
                android:endColor="#ffff"
                android:angle="270"/>
        </shape>

    </item>

    <item android:id="@android:id/progress">

        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:startColor="#2EA5DE"
                    android:centerColor="#882EA5DE"
                    android:centerY="0.5"
                    android:endColor="#2EA5DE"
                    android:angle="270"/>
            </shape>
        </clip>
    </item>

</layer-list>